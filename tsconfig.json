{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/typescript",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "react-native",
    "lib": ["ES2020"],
    "types": ["jest", "node"]
  },
  "include": ["src", "__tests__"],
  "exclude": ["lib", "node_modules"]
}
